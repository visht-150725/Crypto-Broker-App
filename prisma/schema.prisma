generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  wallet   Wallet?
  orders   Order[]
  trades   Trade[]
  holdings Holding[]
}

model Wallet {
  userId  Int     @id
  balance Decimal @default(1000000)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Asset {
  symbol String   @id
  base   String
  quote  String
  orders Order[]
}

model Order {
  id        BigInt   @id @default(autoincrement())
  userId    Int
  symbol    String
  side      Int
  type      Int
  price     Decimal?
  quantity  Decimal
  status    Int
  createdAt DateTime @default(now())
  filledAt  DateTime?

  user  User  @relation(fields: [userId], references: [id])
  asset Asset @relation(fields: [symbol], references: [symbol])
}

model Trade {
  id         BigInt   @id @default(autoincrement())
  userId     Int
  symbol     String
  side       Int
  price      Decimal
  quantity   Decimal
  executedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Holding {
  userId   Int
  symbol   String
  quantity Decimal @default(0)
  avgPrice Decimal @default(0)

  user User @relation(fields: [userId], references: [id])

  @@id([userId, symbol])
}